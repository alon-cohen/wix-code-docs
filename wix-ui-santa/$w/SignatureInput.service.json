    [ { "name": "clear",
        "labels": [],
        "nameParams": [],
        "params": [],
        "ret":
          { "type": "void" },
        "locations":
          [ { "lineno": 129,
              "filename": "SignatureInput.js" } ],
        "docs":
          { "summary": "Clears the signature input.",
            "description":
              [ "The [`value`](https://www.wix.com/corvid/reference/$w.SignatureInput.html#value) of the signature input contains the signature that the site visitor has",
                " signed. The `clear()` function erases the signature from the signature pad and clears the `value` property.",
                "",
                " If the signature field is already empty, and a site visitor clears the signature, an [`onChange()`](https://www.wix.com/corvid/reference/$w.ValueMixin.html#onChange) event handler is not triggered." ],
            "links": [],
            "examples":
              [ { "title": "Clears the signature input",
                  "body":
                    [ "let myEmptySignature = $w(\"#mySignatureInput\").clear();" ],
                  "extra":
                    {  } },
                { "title": "Clears input on a form, including the signature",
                  "body":
                    [ "$w('#clearFormButton').onClick(() => {",
                      "  $w('TextInput').forEach(element => {",
                      "    element.value = '';",
                      "  });",
                      "  $w('#mySignatureInput').clear();",
                      "});" ],
                  "extra":
                    {  } } ],
            "extra":
              {  } },
        "extra":
          {  } } ],
